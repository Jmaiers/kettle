{
  "parser"  : "babel-eslint",
  "extends" : ["airbnb"],
  "rules": {
    "comma-dangle": 0, // The worst rule
    "default-case": 0,
    "global-require": 0,
    "new-cap": [2, {"capIsNew": false, "newIsCap": true}],
    "no-console": 0,
    "no-floating-decimal": 0,
    "no-nested-ternary": 0,
    "import/no-extraneous-dependencies":
      ["error", {
          "devDependencies": ["**/gulpfile.babel.js"]
        }
      ]
  },
  "globals": {
    "after": false,
    "afterEach": false,
    "before": false,
    "beforeEach": false,
    "describe": false,
    "it": false,
    "require": false
  }
}
